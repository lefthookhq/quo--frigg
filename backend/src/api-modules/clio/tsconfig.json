{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "module": "commonjs",
        "target": "ES2020",
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "frigg-core.d.ts"],
    "exclude": ["dist", "test", "node_modules"]
}
