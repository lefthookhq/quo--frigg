## FRIGG CORE VARIABLES
WEBSOCKET_API_ENDPOINT=http://localhost:3002
STAGE=dev
AES_KEY_ID=local-dev-key
AES_KEY=your-aes-key-here
FRONTEND_URL=http://localhost:5173
DATABASE_URL=postgresql://postgres:password@localhost:5432/postgres

# Base URL for webhook registration and API callbacks
# For local development with webhooks, use ngrok or similar tunnel service
# Production: https://your-api.example.com
# Local with ngrok: https://your-ngrok-url.ngrok-free.app
BASE_URL=http://localhost:3001

REDIRECT_URI=
REDIRECT_PATH=/api/asana-integration/auth/redirect
MONGO_URI=mongodb://root:rootpassword@localhost:27017?retryWrites=true&w=majority

# LocalStack Configuration
SQS_ENDPOINT=http://localhost:4566
NODE_TLS_REJECT_UNAUTHORIZED=0

# Health Check API Key
HEALTH_API_KEY=your-health-api-key

# Optional: API key for backend-to-backend authentication with x-frigg headers
# Set this to enable API key validation for x-frigg-appUserId/appOrgId requests
FRIGG_APP_API_KEY=your-secret-api-key-here

#Used for running manual migration when invoking the migration lambda
ADMIN_API_KEY=your-admin-key

# Future: JWT secret for adopter JWT authentication (not yet implemented)
# JWT_SECRET=your-jwt-secret-here

# Quo CRM API
QUO_API_KEY=your-quo-api-key
QUO_BASE_URL=https://dev-public-api.openphone.dev

# Scale Test API
SCALE_TEST_API_KEY=any-dummy-key

# AxisCare API
AXISCARE_API_KEY=your-axiscare-api-key
AXISCARE_BASE_URL=https://static.axiscare.com/api

# Attio CRM API (OAuth)
ATTIO_CLIENT_ID=your-attio-client-id
ATTIO_CLIENT_SECRET=your-attio-client-secret
ATTIO_SCOPE=user_management:read record_permission:read-write

# PipeDrive API
PIPEDRIVE_API_KEY=your-pipedrive-api-key

# Optional: HTTP Basic Auth for webhook endpoint security
# PIPEDRIVE_WEBHOOK_USER=webhook_user
# PIPEDRIVE_WEBHOOK_PASSWORD=secure_password_here

# Zoho CRM API (OAuth)
ZOHO_CRM_CLIENT_ID=your-zoho-client-id
ZOHO_CRM_CLIENT_SECRET=your-zoho-client-secret
# Zoho CRM OAuth scope - includes module access and webhook management permissions
# Required for webhook registration and data synchronization
ZOHO_CRM_SCOPE=ZohoCRM.modules.ALL ZohoCRM.settings.webhooks.CREATE ZohoCRM.settings.webhooks.UPDATE ZohoCRM.settings.webhooks.DELETE ZohoCRM.settings.webhooks.READ
